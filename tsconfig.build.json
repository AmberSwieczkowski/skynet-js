{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types/**/*.d.ts"],
  "exclude": ["src/*.test.ts"]
}
