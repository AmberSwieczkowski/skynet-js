{
  "name": "skynet-js",
  "version": "3.0.1-beta",
  "description": "Sia Skynet Javascript Client",
  "browser": "dist/web/index.web.js",
  "main": "dist/node/index.node.js",
  "module": "src/index.web.js",
  "files": [
    "dist/*"
  ],
  "browserslist": [
    "defaults",
    "not IE 11",
    "not OperaMini all"
  ],
  "scripts": {
    "build": "rimraf dist && yarn run webpack",
    "lint:eslint": "eslint --ext .ts src utils --max-warnings 0",
    "lint:tsc": "tsc",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage --coverageDirectory ../coverage"
  },
  "jest": {
    "testTimeout": 60000,
    "clearMocks": true,
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 98,
        "functions": 98,
        "lines": 98,
        "statements": 98
      }
    },
    "rootDir": "src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .ts --fix",
      "tsc",
      "prettier --write"
    ],
    "*.{json,yml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NebulousLabs/skynet-js.git"
  },
  "keywords": [
    "sia",
    "skynet"
  ],
  "author": "Karol Wypchlo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NebulousLabs/skynet-js/issues"
  },
  "homepage": "https://github.com/NebulousLabs/skynet-js",
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "axios": "^0.21.0",
    "base32-encode": "^1.1.1",
    "base64-js": "^1.3.1",
    "blakejs": "^1.1.0",
    "buffer": "^6.0.1",
    "form-data": "^4.0.0",
    "mime": "^2.5.2",
    "path-browserify": "^1.0.1",
    "randombytes": "^2.1.0",
    "sjcl": "^1.0.8",
    "tweetnacl": "^1.0.3",
    "url-join": "^4.0.1",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^26.0.14",
    "@types/mime": "^2.0.3",
    "@types/node": "^14.11.2",
    "@types/randombytes": "^2.0.0",
    "@types/sjcl": "^1.0.29",
    "@types/tmp": "^0.2.0",
    "@types/url-join": "^4.0.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "axios-mock-adapter": "^1.18.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^7.11.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-jsdoc": "^32.0.0",
    "husky": "^5.0.9",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "tmp": "^0.2.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.0.3",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  }
}
