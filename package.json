{
  "name": "skynet-js",
  "version": "2.0.5",
  "description": "Sia Skynet Javascript Client",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "rimraf dist && babel src --out-dir dist --ignore src/**/*.test.js",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NebulousLabs/skynet-js.git"
  },
  "keywords": [
    "sia",
    "skynet"
  ],
  "author": "Karol Wypchlo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NebulousLabs/skynet-js/issues"
  },
  "homepage": "https://nebulouslabs.github.io/skynet-js/",
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "axios": "^0.20.0",
    "path-browserify": "^1.0.1",
    "url-join": "^4.0.1",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "axios-mock-adapter": "^1.18.2",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  }
}
